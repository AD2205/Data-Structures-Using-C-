//User function Template for C++


class Solution
{
    public:
    // Function to check if Kth bit is set or not.
    bool checkKthBit(int n, int k)
    {
        // Your code here
        // It can be a one liner logic!! Think of it!!
        //if((n>>(k-1) & 1) == 1)
        //return 1;
        //else 
        // return 0;
         if(( n & (1<<k)) != 0)
         return 1;
         else return 0;
    }
};
